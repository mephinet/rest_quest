td
  height: 50px
  width: 100px
  border: 1px solid
  padding: 2px
  position: relative
  background-position: center
  background-repeat: no-repeat
  background-size: auto 75%

td.water
  background-color: lightblue

td.grass
  background-color: lightgreen

td.forest
  background-color: sandybrown

td.mountain
  background-color: yellow

td.myCastle
  background-image: url('../assets/tile-castle-player1.svg')

td.enemyCastle
  background-image: url('../assets/tile-castle-player2.svg')

td.treasure
  border: 3px solid yellow
  padding: 0px
  background-image: url('../assets/tile-treasure.svg')

td.my,
td.routed
  border: 3px solid
  padding: 0px

td.my
  background-image: url('../assets/tile-avatar-player1.svg')

span.details
  position: absolute
  font-size: 10px
  left: 3px
  right: 3px
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

span.type
  top: 1px
  text-align: right

span.visibilityGain
  top: 1px

span.moveCost
  top: 11px

span.cumulatedCost
  top: 21px

span.score
  top: 31px

span.route
  top: 41px
